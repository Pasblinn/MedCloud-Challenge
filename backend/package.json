{
    "name": "patient-management-backend",
    "version": "1.0.0",
    "description": "Backend API for Patient Management System",
    "main": "src/server.js",
    "scripts": {
      "start": "node src/server.js",
      "dev": "nodemon src/server.js",
      "test": "jest --detectOpenHandles",
      "test:watch": "jest --watchAll --detectOpenHandles",
      "test:coverage": "jest --coverage --detectOpenHandles",
      "lint": "eslint src/**/*.js",
      "lint:fix": "eslint src/**/*.js --fix",
      "db:migrate": "node src/config/migrate.js",
      "db:seed": "node src/config/seed.js"
    },
    "keywords": [
      "nodejs",
      "express",
      "postgresql",
      "redis",
      "crud",
      "api"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
      "express": "^4.18.2",
      "pg": "^8.11.3",
      "redis": "^4.6.10",
      "joi": "^17.11.0",
      "helmet": "^7.1.0",
      "cors": "^2.8.5",
      "morgan": "^1.10.0",
      "compression": "^1.7.4",
      "express-rate-limit": "^7.1.5",
      "uuid": "^9.0.1",
      "bcryptjs": "^2.4.3",
      "jsonwebtoken": "^9.0.2",
      "dotenv": "^16.3.1",
      "winston": "^3.11.0"
    },
    "devDependencies": {
      "nodemon": "^3.0.2",
      "jest": "^29.7.0",
      "supertest": "^6.3.3",
      "eslint": "^8.54.0",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-plugin-import": "^2.29.0",
      "@types/jest": "^29.5.8"
    },
    "jest": {
      "testEnvironment": "node",
      "collectCoverageFrom": [
        "src/**/*.js",
        "!src/server.js",
        "!src/config/*.js"
      ],
      "coverageDirectory": "coverage",
      "coverageReporters": [
        "text",
        "lcov",
        "html"
      ]
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }